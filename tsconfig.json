{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",

        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,

        "esModuleInterop": true,

        "strict": true,

        "forceConsistentCasingInFileNames": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "newLine": "lf",
        "noEmitOnError": true,
        "stripInternal": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
